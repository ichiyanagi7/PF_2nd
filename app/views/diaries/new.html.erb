<div class="container mt-5">
  <div class="row mb-3">
    <h3>今日の一曲</h3>
  </div>

  <div class="row">
    <%= form_with model: @diary,url: diaries_path,method: :post,local:true do |f| %>
    <%= render "layouts/error", model: f.object %>
    <div class="row mt-2">
      <div class="col-md-4 mr-auto form-group" id="datetime">
        <%= f.label :日にち %><span class="small  badge badge-warning ml-2">必須</span>
        <%= f.date_field :date,class:"form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 form-group">
        <%= f.label :アーティスト %><span class="small  badge badge-warning ml-2">必須</span>
        <%= f.text_field :artist ,placeholder:"アーティスト名を入力" ,class:"form-control" %>
      </div>

      <div class="col-md-6 form-group">
        <%= f.label :曲名 %><span class="small  badge badge-warning ml-2">必須</span>
        <%= f.text_field :music ,placeholder:"曲名を入力" ,class:"form-control" %>
      </div>

      <div class="col-md-10 form-group">
        <%= f.label :今日の出来事 %>
        <%= f.text_area :word ,placeholder:"記憶に残ったことを記しましょう" ,class:"form-control" %>
      </div>

      <div class="col-sm-12 mt-3 form-group">
        <%= f.submit "記録",class:"px-5 btn btn-outline-dark" %>
      </div>
    </div>
    <% end %>

  </div>
</div>